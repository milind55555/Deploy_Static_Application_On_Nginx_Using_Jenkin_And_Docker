pipeline {
    agent any

    environment {
        IMAGE_NAME = "static-website"
        CONTAINER_NAME = "static-container"
        DOCKERHUB_REPO = "milind1122/deploy_jenkin_and_docker_on_static-website"
    }

    stages {

        stage('Checkout Code') {
            steps {
                git 'https://github.com/milind55555/Deploy_Static_Application_On_Nginx_Using_Jenkin_And_Docker.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t $DOCKERHUB_REPO .'
            }
        }

        stage('Test Docker Image') {
            steps {
                sh '''
                docker run -d --name test-container -p 8081:80 $DOCKERHUB_REPO
                sleep 10
                docker ps
                docker stop test-container
                docker rm test-container
                '''
            }
        }

        stage('Push to DockerHub') {
            steps {
                withDockerRegistry([ credentialsId: 'dockerhub-creds', url: '' ]) {
                    sh 'docker push $DOCKERHUB_REPO'
                }
            }
        }

        stage('Deploy to Nginx Server') {
            steps {
                sh '''
                docker stop $CONTAINER_NAME || true
                docker rm $CONTAINER_NAME || true
                docker run -d --name $CONTAINER_NAME -p 80:80 $DOCKERHUB_REPO
                '''
            }
        }
    }

    post {
        success {
            echo "Deployment Successful!"
        }
        failure {
            echo "Deployment Failed!"
        }
    }
}
